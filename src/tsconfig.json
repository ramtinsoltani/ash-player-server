{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": false,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "sourceRoot": ".",
    "outDir": "../dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es2018"
    ],
    "paths": {
      "@ash-player-server/service/*": ["./services/*.service"],
      "@ash-player-server/router/*": ["./routers/*.router"],
      "@ash-player-server/plugin/*": ["./plugins/*.plugin"],
      "@ash-player-server/config": ["./server.config"],
      "@ash-player-server/firebase-cert": ["./firebase-cert.json"],
      "@ash-player-server/shared/*": ["./shared/*"]
    }
  }
}
